<Window x:Class="KUKUTAN.frmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="パスワード入力" Height="150" Width="230" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Label Content="パスワードを入力してください" Margin="10,10,10,0" VerticalAlignment="Top" Height="23" Padding="0"/>
        <Label Content="パスワード" HorizontalAlignment="Left" Margin="10,48.306,0,0" VerticalAlignment="Top" Height="23" Width="92.732" Padding="0"/>
        <PasswordBox x:Name="passwordEditBox" PasswordChar="*" HorizontalAlignment="Left" Height="23" Margin="107.732,48.306,0,0" VerticalAlignment="Top" Width="107.601"/>
        <Button x:Name="Cancel" Style="{StaticResource DefaultButton}" Content="キャンセル" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="100" IsCancel="True" Click="Cancel_Click"/>
        <Button x:Name="OK" Style="{StaticResource DefaultButton}" Content="OK" HorizontalAlignment="Left" Margin="115,92,0,0" VerticalAlignment="Top" Width="100" IsDefault="True" Click="OK_Click"/>

    </Grid>
</Window>
